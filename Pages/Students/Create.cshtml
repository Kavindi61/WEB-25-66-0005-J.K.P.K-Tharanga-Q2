
@page
@model StudentMGT.Pages.Students.CreateModel
<h2>Add New Student</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Student.Name" class="form-label"></label>
        <input asp-for="Student.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Student.City" class="form-label"></label>
        <input asp-for="Student.City" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Student.CourseID" class="form-label">Course</label>
        <select asp-for="Student.CourseID" asp-items="Model.Courses" class="form-select"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-page="./Students">Cancel</a>
</form>

