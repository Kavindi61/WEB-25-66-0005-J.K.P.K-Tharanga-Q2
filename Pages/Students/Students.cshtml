
@page
@model StudentMGT.Pages.Students.StudentsModel
<style>
    .btn1 {
        background: #1974ace4;
        color: white;
        text-decoration: none;
    }

    .btn3 {
        color: darkblue;
        text-decoration: underline;
    }

   
</style>

<h4>STUDENTS</h4>
<br />

<form method="get" class="mb-3 ">
    <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Search Students...">
</form>

<a class="btn btn-primary" asp-page="./Create">Add New Student</a>
<br />
<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Students)
        {
            <tr>
                <td>@s.StudentID</td>
                <td>@s.Name</td>
                <td>@s.City</td>
                <td>@s.Course.Name</td>
                <td>
                    <a class="btn1 btn-sm " asp-page="./Edit" asp-route-id="@s.StudentID">Edit</a>
                    <a class="btn3 btn-sm " asp-page="./Delete" asp-route-id="@s.StudentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


