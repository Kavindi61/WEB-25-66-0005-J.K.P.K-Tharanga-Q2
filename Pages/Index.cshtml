
@page
@model StudentMGT.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}
<style>
    .card1{
        background:#46a5e0d2;
    }

    .display-6{
        text-align:center;
    }

    .card2{
        background: #46a5e05f;
    }

    .thead.custom-blue th {
        background: #46a5e05f;
    }

    .btn1{
        background: #1974ace4;
        color:white;
        text-decoration:none;
    }
    .btn2{
        background: #46a5e05f;
        color: white;
        text-decoration: none;
    }

    .btn3{
        color:darkblue;
        text-decoration:underline;
    }

</style>

<h6 class="mb-4 fw-bold">DASHBORD</h6>

<div class="row mb-4">

    <!-- Total Courses Card -->
    <div class="col-md-3">
        <div class="card1 text-white mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">Total Courses</h5>
                    <p class="card-text display-6">@Model.TotalCourses</p>
                </div>
                <a class="btn btn-light btn-sm" asp-page="/Courses/Courses">View</a>
            </div>
        </div>
    </div>

    <!-- Total Students Card -->
    <div class="col-md-3">
        <div class="card1 text-white  mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">Total Students</h5>
                    <p class="card-text display-6">@Model.TotalStudents</p>
                </div>
                <a class="btn btn-light btn-sm" asp-page="/Students/Students">View</a>
            </div>
        </div>
    </div>

    <!-- Add New Course -->
    <div class="col-md-3">
        <div class="card2 text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Add New Course</h5>
                <a class="btn btn-light btn-sm mt-2" asp-page="/Courses/Create">Add Course</a>
            </div>
        </div>
    </div>

    <!-- Add New Student -->
    <div class="col-md-3">
        <div class="card2 text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Add New Student</h5>
                <a class="btn btn-light btn-sm mt-2" asp-page="/Students/Create">Add Student</a>
            </div>
        </div>
    </div>

</div>

<h5 class="mb-3 fw-bold">STUDENTS PER COURSE</h5>
<table class="table table-bordered table-striped">
    <thead class="thead custom-blue th">
        <tr>
            <th>Course Name</th>
            <th>Lecturer</th>
            <th>Number of Students</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.CourseDetails)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.LecturerName</td>
                <td>@course.StudentCount</td>
                <td>
                    <a class="btn1  btn-sm" asp-page="/Courses/SubjectDetails" asp-route-id="@course.CourseID">View</a>
                    <a class="btn2  btn-sm" asp-page="/Courses/Edit" asp-route-id="@course.CourseID">Edit</a>
                    <a class="btn3 btn-sm" asp-page="/Courses/Delete" asp-route-id="@course.CourseID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
