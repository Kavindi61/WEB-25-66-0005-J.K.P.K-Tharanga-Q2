@page
@model StudentMGT.Pages.Courses.CreateModel
<h2>Add New Course</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Course.Name" class="form-label"></label>
        <input asp-for="Course.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Course.LecturerName" class="form-label"></label>
        <input asp-for="Course.LecturerName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-page="./Courses">Cancel</a>
</form>
