
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student Management Portal </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Funnel+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    <style>
        .navbar-brand{
            font-family: "Funnel Sans", sans-serif;
        }

        .navbar{
            background: #2088c8;
            color: black;
        }

    </style>
</head>
<body>
 
    <nav class="navbar navbar-expand-lg navbar-light  mb-4 ">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold ms-5" asp-page="/Index">STUDENT MANAGEMENT PORTAL</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Push links to the right -->
                <ul class="navbar-nav ms-auto me-5 fw-bold">
                    <li class="nav-item ">
                        <a class="nav-link" asp-page="/Students/Students">STUDENTS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Courses/Courses">COURSES</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

